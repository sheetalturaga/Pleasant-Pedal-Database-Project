<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
	id="WebApp_ID" version="4.0">
  <display-name>pleasantpeddle</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>Login.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>CreateUser</servlet-name>
  	<servlet-class>app.servlet.CreateUser</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>DeleteRecommendation</servlet-name>
	<servlet-class>app.servlet.DeleteRecommendation</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>FindTrails</servlet-name>
  	<servlet-class>app.servlet.FindTrails</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<servlet-class>app.servlet.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateUser</servlet-name>
  	<url-pattern>/createuser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeleteRecommendation</servlet-name>
  	<url-pattern>/deleterecommendation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FindTrails</servlet-name>
  	<url-pattern>/findtrails</url-pattern>
  </servlet-mapping>
</web-app>